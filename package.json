{
  "name": "artis-release-api",
  "version": "1.1.0",
  "description": "A brand new way for fetching your favourites artists releases",
  "main": "/src/index.ts",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "start": "npm run build && node dist/index.js",
    "start-dev": "MONGO_DB_MOCK=true nodemon",
    "prestart-with-db": "npm run db-start",
    "start-with-db": "trap 'exit 0' SIGINT; npm run db-start && MONGO_DB_MOCK=false nodemon",
    "poststart-with-db": "npm run db-stop",
    "populate": "ts-node ./src/scripts/postDataIntoDB.ts",
    "test": "jest",
    "lint": "eslint src/**/*",
    "lint:fix": "eslint src/**/* --fix",
    "release": "standard-version",
    "db-start": "docker-compose -f docker-compose.mongodb.dev.yml up --build -d",
    "db-stop": "docker-compose -f docker-compose.mongodb.dev.yml down"
  },
  "keywords": [
    "artist",
    "release",
    "band",
    "nodejs",
    "typescript",
    "mongodb"
  ],
  "author": "Pablo Rossetti (PR)",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "joi": "^17.4.0",
    "module-alias": "^2.2.2",
    "mongodb": "^3.6.4",
    "morgan": "^1.10.0",
    "newrelic": "^7.1.1",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/mongodb": "^3.6.6",
    "@types/morgan": "^1.9.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^6.9.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "_moduleAliases": {
    "@src": "src",
    "@services": "src/services",
    "@utils": "src/utils",
    "@routes": "src/routes"
  }
}
